    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="5*"/>
            <RowDefinition Height="43*"/>
        </Grid.RowDefinitions>
        <NavigationView x:Name="nvSample"
    IsSettingsVisible="True"
    IsBackButtonVisible="Auto"
    IsBackEnabled="True"
 
    AlwaysShowHeader="True"
    PaneTitle="Daouda Inc"
    PaneDisplayMode="Left"
    ExpandedModeThresholdWidth="500"
    SelectionFollowsFocus="Enabled"
    IsTabStop="True" Margin="-10,10,10,-10" Grid.RowSpan="2" >

            <!-- Code pour le header -->
            <NavigationView.Header>
                <!-- Voir comment enlever les truncates des espaces -->
                <TextBlock x:Name="header">Bienvenu chez</TextBlock>
            </NavigationView.Header>

            <!-- Début des Items  -->
            <NavigationView.MenuItems>

                <!-- Structure de l'invité // connecter // créer un compte  -->
                <NavigationViewItemHeader x:Name="inviteHeader" Content="Invité"/>
                <NavigationViewItem  Content="Creer un un compte" Name="ajouterCompte" Icon="Add" Background="#FF546F71"  />
                <NavigationViewItem Content="Connexion" Name="connexion" Icon="Account" Background="#FF745555"/>
                <NavigationViewItemSeparator x:Name="inviteHr" />

                <!-- Structure de l'administrateur -->
                <NavigationViewItemHeader x:Name="adminHeader" Content="Administrateur" Visibility="Collapsed"/>
                <NavigationViewItem Content="Acceuil" Name="homeAdministrateur" Icon="Home" Background="#FF635490" Visibility="Collapsed"/>
                <NavigationViewItemSeparator x:Name="adminHr" Visibility="Collapsed"/>

                <!-- Structure du chauffeur  -->
                <NavigationViewItemHeader x:Name="chauffeurHeader" Content="Chauffeur" Visibility="Collapsed"/>
                <NavigationViewItem Content="Acceuil" Name="homeChauffeur" Visibility="Collapsed" Icon="Home" Background="#FF8B9054"/>
                <NavigationViewItemSeparator x:Name="chauffeurHr" Visibility="Collapsed" />

                <!-- Strucuture du clients -->
                <NavigationViewItemHeader x:Name="clientsHeader" Content="Clients" Visibility="Collapsed"/>
                <NavigationViewItem Content="Acceuil" Visibility="Collapsed"  Name="homeClient" Icon="Home" Background="#FFB37893"/>


            </NavigationView.MenuItems>
            <!-- Fin des items -->

            <!-- Options non utilisées pour section more info -->
            <NavigationView.PaneCustomContent>
                <HyperlinkButton x:Name="PaneHyperlink" Content="More info" Margin="12,0" Visibility="Collapsed" />
            </NavigationView.PaneCustomContent>

            <!-- Code pour la barre de recherhe  -->
            <NavigationView.AutoSuggestBox>
                <AutoSuggestBox QueryIcon="Find" AutomationProperties.Name="Search" />
            </NavigationView.AutoSuggestBox>

            <!-- Début du footer  -->
            <NavigationView.PaneFooter>
                <StackPanel x:Name="compte" Orientation="Vertical" Visibility="Collapsed">
                    <NavigationViewItem Icon="Account" AutomationProperties.Name="download" Content="Compte" />

                </StackPanel>
            </NavigationView.PaneFooter>

